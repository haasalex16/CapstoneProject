<img class="album-art-thumb" src="<%= song.get('album_art_url') %>" />

<% if (edit) { %>
  <section class="move-and-remove">
    <div class="move">
      1
    </div>
    <div class="remove" data-playlist-song-id="<%= song.get('playlist_song_id') %>">
      x
    </div>
  </section>

<% } else { %>
  <div class="small-play-button">
  </div>
<% } %>
<% if (song.get('owner')) { %>
  <a class="playlist-song-owner" href="#/users/<%=song.get('owner').id %>"><%= song.get('owner').username %> - </a>

  <% if(currentUser.get('id') === song.get('owner').id){ %>
    <a class='title' href="#/songs/<%= song.get('id') %>/edit">
      <%= song.escape('title') %>
    </a>
  <%  } else { %>
    <p class='title'><%= song.escape('title') %> </p>
  <%  }%>

<% } %>
